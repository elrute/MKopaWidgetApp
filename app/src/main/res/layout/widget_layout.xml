<!-- widget_layout.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/widget_background">

    <!-- Existing Loan Progress TextView -->
    <TextView
        android:id="@+id/textViewLoanProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loan Progress: --%"
        android:textSize="16sp"
        android:textColor="@color/black" />

    <!-- New Payment Outcome TextView -->
    <TextView
        android:id="@+id/textViewPaymentOutcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        android:textColor="@color/black"
        android:paddingTop="8dp" />

    <!-- Existing Make Payment Button -->
    <Button
        android:id="@+id/buttonMakePayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Payment"
        android:layout_gravity="end"
        android:padding="8dp" />
</LinearLayout>
